{
  "openapi": "3.1.0",
  "info": { "title": "Gift Genius AutoCheckout API", "version": "1.0.0" },
  "servers": [{ "url": "https://gift-genius-autocheckout.onrender.com" }],
  "paths": {
    "/create_checkout": {
      "post": {
        "operationId": "createCheckout",
        "summary": "Create a Stripe Checkout session for selected product + â‚¬0.99 fee",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "product_name": { "type": "string" },
                  "product_price": { "type": "number" },
                  "currency": { "type": "string", "default": "EUR" },
                  "service_fee_cents": { "type": "integer" },
                  "quantity": { "type": "integer", "default": 1 },
                  "success_url": { "type": "string", "default": "https://chat.openai.com/" },
                  "cancel_url": { "type": "string", "default": "https://chat.openai.com/" },
                  "locale": { "type": "string" }
                },
                "required": ["product_name", "product_price"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Checkout URL",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "checkout_url": { "type": "string", "description": "Direct Stripe URL to open" },
                    "currency": { "type": "string" },
                    "amount_product_cents": { "type": "integer" },
                    "amount_service_fee_cents": { "type": "integer" },
                    "amount_total_cents": { "type": "integer" }
                  },
                  "required": ["checkout_url"]
                },
                "examples": {
                  "ok": {
                    "summary": "Example",
                    "value": {
                      "checkout_url": "https://checkout.stripe.com/c/pay/cs_test_12345",
                      "currency": "EUR",
                      "amount_product_cents": 1999,
                      "amount_service_fee_cents": 99,
                      "amount_total_cents": 2098
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
